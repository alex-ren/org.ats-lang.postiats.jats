// =====================

main_s(sys_tid) = 
  main_init{__temp_list_args = sys_list_manager.list_nil ();
            sys_gstack.add_frame(0, __temp_list_args); 
            sys_thread_num++} ->
  Skip; 
  thread_finalize(sys_tid);

main = main_s(0) ||| Scheduler;
